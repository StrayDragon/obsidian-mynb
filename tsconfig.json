{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "*": ["*", "lib/*"]
    },
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ]
}
